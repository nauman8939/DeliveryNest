<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f6f8"
    tools:context=".OrderSummary">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f5f6f8">

        <RelativeLayout
            android:id="@+id/headerlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="5dp">

            <Button
                android:id="@+id/backbutton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentStart="true"
                android:layout_marginTop="16dp"
                android:background="@drawable/back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/backbutton"
                android:fontFamily="@font/notoseriftotomedium"
                android:padding="20dp"
                android:text="Order Summary"
                android:textColor="@color/black"
                android:textSize="20sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/headerlayout"
            android:layout_margin="20dp"
            android:background="@color/white"
            android:padding="10dp">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/sendersdetailsheader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bevanitalic"
                    android:paddingTop="10dp"
                    android:text="Sender's Detail" />

                <TextView
                    android:id="@+id/sendername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="20dp"
                    android:drawableLeft="@drawable/personiconpin"
                    android:drawablePadding="2dp"
                    android:fontFamily="@font/bevanitalic"
                    android:padding="10dp"
                    android:paddingTop="20dp"
                    android:text="Name:Nauman Pathan"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/sendersaddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:drawablePadding="2dp"
                    android:fontFamily="@font/bevanitalic"
                    android:padding="10dp"
                    android:text="@string/address"
                    android:textColor="@color/black"
                    app:drawableLeftCompat="@drawable/locationicon" />

                <TextView
                    android:id="@+id/senderscontact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="80dp"
                    android:drawablePadding="2dp"
                    android:fontFamily="@font/bevanitalic"
                    android:padding="10dp"
                    android:text="Contact: 7038230674"
                    android:textColor="@color/black"
                    app:drawableLeftCompat="@drawable/phone" />


            </com.google.android.material.card.MaterialCardView>


        </RelativeLayout>

    </RelativeLayout>


</ScrollView>